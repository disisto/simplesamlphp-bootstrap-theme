{% set pagetitle = 'Error report sent'|trans %}
{% extends "bootstrap.twig" %}

{% block content %}

   <div class="alert alert-success" role="alert">
     <h4 class="alert-heading">
       <svg class="bi me-1 mb-1 opacity-100 theme-icon" width="1em" height="1em" fill="currentColor"><use href="#check2-circle"></use></svg>
       {{ pagetitle }}
     </h4>
     <hr>
     <p class="mb-0">{{ 'The error report has been sent to the administrators.' |trans }}</p>
   </div>

{% endblock %}
